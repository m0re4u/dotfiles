# i3status configuration file for i3bar
# see "man i3status" for documentation

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  color_good = "#00FF00"
  color_degraded = "#FFFF00"
  color_bad = "#FF0000"
  interval = 5
}

order += "disk /"
order += "disk /home/m0re"
order += "run_watch DHCP"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

disk "/" {
  format = "root: %avail/%total"
  prefix_type = custom
}
disk "/home/m0re" {
  format = "home %avail/%total"
  prefix_type = custom
}

wireless _first_ {
  format_up = " (%quality @ %essid)"
  format_down = " down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = ""
}

battery 1 {
  format = "%status %percentage (%remaining)"
  status_chr = ""
  status_bat = ""
  status_full = ""
  hide_seconds = "true"
  integer_battery_capacity = "true"
  low_threshold = "20"
  threshold_type = "time"
}

cpu_temperature 0 {
  format = "%degrees°C"
}

volume master {
  format = "V: %volume"
  format_muted = "V: mtd"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "  %a %b %d  %H:%M:%S"
}
